# Server Configuration
PORT=3000

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=iot_user
MQTT_PASSWORD=iot_password
MQTT_CLIENT_ID=iot_metrics_service

# MQTT Topics
TEMP_TOPIC=iot/sensors/temperature
HUMIDITY_TOPIC=iot/sensors/humidity
ALERT_TOPIC=iot/alerts
STATUS_TOPIC=iot/status

# Database Configuration
DB_PATH=data/metrics.db

# Temperature Configuration
TEMPERATURE_ALERT_THRESHOLD=30
TEMPERATURE_NORMAL_THRESHOLD=25

# SMS Notification Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890
ALERT_PHONE_NUMBER=+1987654321

# Location Information
LOCATION_NAME=Server Room
